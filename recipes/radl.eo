VERSION := "3307afb888be3ac2ea32d2942df9a2e278c5fdbc"
SUMMARY := "radge's utility library"

src :=
    commonpath
        extract
            download "https://codeberg.org/radge/radl/archive/{VERSION}.tar.gz"

package radl
    summary SUMMARY
    version VERSION
    platform linux windows-mingw unknown
    depends stb
    alias "/lib/scopes/packages/radl" "{src}/src"
